---
const {variant, size} = Astro.props;
---

<button class={variant + " " + size}><slot /></button>

<style>
    button{
        padding: 1rem;
        border-radius: 2rem;
    }

    .primary {
        background-color: white;
        color: darkolivegreen;
    }

    .secondary {
        background-color: darkolivegreen;
        color: white;
    }

    .small {
        font-size: 1rem;
    }

    .medium {
        font-size: 2rem;
    }

    .large {
        font-size: 3rem;
    }
</style>

